<div class="row" style="height: 100px">
  <div class="col-md-2" style="background: #1a2336">
    <div class="row">
      <div class="display-profile-info">
        <div class="display-profile-pic">
          <%= image_tag current_user.photo.url, class: 'rounded' %>
        </div>
        <div class="display-full-name">
          <p style="padding-top: 10px"><%= current_user.full_name %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-7" style="background: #4aa6e8">
    <div class="">
      <i class="fab fa-twitter"></i>
    </div>
  </div>
  <div class="col-md-3" style="background: #4aa6e8">
    <div class="row">
      <div class="col-md-3">
        <i class="fas fa-pen"></i>
      </div>
      <div class="col-md-3">
        <i class="fas fa-envelope"></i>
      </div>
      <div class="col-md-3">
        <i class="fas fa-search"></i>
      </div>
      <div class="col-md-3">
        <i class="fas fa-cog"></i>
      </div>
    </div>
  </div>
</div>
